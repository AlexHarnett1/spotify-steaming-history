  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "outDir": "public/dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "public/src/**/*"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}